[

    {
        "type": "text",
        "label": "**General ——**",
        "margin": "10px 0 15px 0",
        "size": "20px"
    },

    {

        "type": "checkbox",
        "property": "zen.urlbar.replace-newtab",
        "label": "Change the behavior of New Tab",
        "defaultValue": false

    },

    {

        "type": "checkbox",
        "property": "browser.tabs.hoverPreview.enabled",
        "label": "Enable Tab Preview",
        "defaultValue": false
        
    },

    {

        "type": "checkbox",
        "property": "browser.tabs.groups.enabled",
        "label": "Enable the Tab Group",
        "defaultValue": false

    },
    
    {

        "type": "checkbox",
        "property": "gfx.webrender.super-resolution.nvidia",
        "label": "Enable NVIDIA VSR (It must be enabled simultaneously with the settings below. ⚠️ Note: Some mods may prevent VSR from functioning properly, such as Nebula.)",
        "defaultValue": false
        
    },

    {

        "type": "checkbox",
        "property": "gfx.webrender.dcomp-video-hw-overlay-win-force-enabled",
        "label": "Enable NVIDIA VSR (It must be enabled simultaneously with the settings above. ⚠️ Note: Some mods may prevent VSR from functioning properly, such as Nebula.)",
        "defaultValue": false
        
    },


    {

        "type": "checkbox",
        "property": "media.videocontrols.picture-in-picture.enable-when-switching-tabs.enabled",
        "label": "automatic PIP when switching tabs",
        "defaultValue": false
        
    },    



    {
        "type": "text",
        "label": "**Search ——**",
        "margin": "10px 0 15px 0",
        "size": "20px"
    },
    
    {
        "type": "string",
        "value": "number",
        "property": "browser.urlbar.maxRichResults",
        "label": "The number of search suggestions",
        "default": "7"

    },
    {
        "type": "string",
        "value": "number",
        "property": "zen.tabs.essentials.max",
        "label": "Maximum quantity of essentials",
        "default": "12"
    },
    {

        "type": "checkbox",
        "property": "zen.glance.enable-contextmenu-search",
        "label": "Perform context search using glance",
        "defaultValue": false
        
    },
    
    {

        "type": "checkbox",
        "property": "zen.urlbar.hide-one-offs",
        "label": "Disenable bottom search engine. Place the search engine below the search suggestions to provide an efficient way to switch between search engines.(Need restart browser)",
        "defaultValue": false
        
    },

    {
        "type": "separator",
        "label": "You can remove this mod at any time after completing the preference settings. Removing and installing mods will not have any impact on your changes."
    },

    {
        "type": "separator",
        "label": "If you have any additional information regarding the hidden preference settings, please feel free to let me know or submit a pull request."
