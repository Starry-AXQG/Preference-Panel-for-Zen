[

    {
        "type": "text",
        "label": "**General ——**",
        "margin": "10px 0 15px 0",
        "size": "20px"
    },

    {

        "type": "checkbox",
        "property": "zen.urlbar.replace-newtab",
        "label": "Disable to restore the behavior of `Create New Tab`",
        "defaultValue": false

    },

    {

        "type": "checkbox",
        "property": "browser.tabs.hoverPreview.enabled",
        "label": "Enable Tab Preview",
        "defaultValue": false
        
    },

    {

        "type": "checkbox",
        "property": "browser.tabs.groups.enabled",
        "label": "Enable the Tab Group",
        "defaultValue": false

    },
    
    {

        "type": "checkbox",
        "property": "gfx.webrender.super-resolution.nvidia",
        "label": "Enable NVIDIA VSR (It must be enabled simultaneously with the settings below. ⚠️ Note: Some mods may prevent VSR from functioning properly, such as Nebula.)",
        "defaultValue": false
        
    },

    {

        "type": "checkbox",
        "property": "gfx.webrender.dcomp-video-hw-overlay-win-force-enabled",
        "label": "Enable NVIDIA VSR (It must be enabled simultaneously with the settings above. ⚠️ Note: Some mods may prevent VSR from functioning properly, such as Nebula.)",
        "defaultValue": false
        
    },


    {

        "type": "checkbox",
        "property": "media.videocontrols.picture-in-picture.enable-when-switching-tabs.enabled",
        "label": "automatic PIP when switching tabs",
        "defaultValue": false
        
    },    
    {

        "type": "checkbox",
        "property": "zen.urlbar.show-pip-button",
        "label": "Display the PIP button of the address bar",
        "defaultValue": false
        
    },  

    {

        "type": "checkbox",
        "property": "zen.urlbar.single-toolbar-show-copy-url",
        "label": "Display 'Copy Link' button in the single toolbar URL address",
        "defaultValue": false
        
    },  
    {
        "type": "text",
        "label": "**Search ——**",
        "margin": "10px 0 15px 0",
        "size": "20px"
    },
    
    {
        "type": "string",
        "value": "number",
        "property": "browser.urlbar.maxRichResults",
        "label": "The number of search suggestions",
