    },
    {
        "type": "string",
        "value": "number",
        "property": "zen.tabs.essentials.max",
        "label": "Maximum quantity of essentials",
        "default": "12"
    },
    {

        "type": "checkbox",
        "property": "zen.glance.enable-contextmenu-search",
        "label": "Perform context search using glance",
        "defaultValue": false
        
    },
    
    {

        "type": "checkbox",
        "property": "zen.urlbar.hide-one-offs",
